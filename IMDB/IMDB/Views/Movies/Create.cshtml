        Bio: <input type="text" name="Bio" />
        <button id="actorSubmit">Submit</button>
    </form>

    <div id="create-actor-container"></div>

<div class="form-group">
    <div id="add-producer" class="col-md-offset-2 col-md-10" >
        <input value="Add Producer" class="btn btn-default" />
    </div>
    </div>

    <form style="display:none" id="producer-form" method="post">
        @Html.AntiForgeryToken()
        Name: <input type="text" name="Name" />
        Sex: <input type="text" name="Sex" />
        Date of Birth: <input type="text" name="DoB" />
        Bio: <input type="text" name="Bio" />
        <button id="producerSubmit">Submit</button>
    </form>

    <div id="create-producer-container"></div>

